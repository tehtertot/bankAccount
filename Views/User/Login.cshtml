<h1>Log In</h1>
<form action="login" method="post">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Email Address</label>
        <div class="col-sm-5">
        <input class="form-control" type="email" name="email">
        </div>
        <div class="col-sm-3"><span class="rederror">@ViewBag.emailerror</span></div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-5">
        <input type="password" class="form-control" name="password">
        </div>
        <div class="col-sm-3"><span class="rederror">@ViewBag.pwerror</span></div>
    </div>
    <div class="row">
    <div class="col-sm-7">
        <input type="submit" value="Log In" class="btn btn-primary pull-right">
    </div>
    </div>
</form>

<br>
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-4">
    <a href="/">Don't have an account? Register here.</a>
    </div>
</div>