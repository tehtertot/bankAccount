@{
    ViewData["Title"] = "Home Page";
}

@model bank.Models.RegisterUserModel

<h1>Register</h1>
<form asp-action="register" method="post">
    <div class="form-group row">
        <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
        <input asp-for="FirstName" class="form-control">
        </div>
        <div class="col-sm-3"><span class="rederror" asp-validation-for="FirstName"></span></div>
    </div>
    <div class="form-group row">
        <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
        <input asp-for="LastName" class="form-control">
        </div>
        <div class="col-sm-3"><span class="rederror" asp-validation-for="LastName"></span></div>
    </div>
    <div class="form-group row">
        <label asp-for="EmailAddress" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
        <input asp-for="EmailAddress" class="form-control">
        </div>
        <div class="col-sm-3"><span class="rederror" asp-validation-for="EmailAddress"></span><span class="rederror">@ViewBag.errors</span></div>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
        <input asp-for="Password" class="form-control">
        </div>
        <div class="col-sm-3"><span class="rederror" asp-validation-for="Password"></span></div>
    </div>
    <div class="form-group row">
        <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-5">
        <input asp-for="ConfirmPassword" class="form-control">
        </div>
        <div class="col-sm-3"><span class="rederror" asp-validation-for="ConfirmPassword"></span></div>
    </div>
    <div class="row">
    <div class="col-sm-7">
        <input type="submit" value="Register" class="btn btn-primary pull-right">
    </div>
    </div>
</form>
<br>
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-4">
    <a href="showLogin">Already registered? Log in here.</a>
    </div>
</div>
