@Html.Partial("NavigationBar")
@model bank.Models.Account

<h4>Which account would you like to view?</h4>
<div class="row justify-content-center">
    <div class="col-sm-6">
    <form action="ShowAccount" method="post">
        <select name="selectedacct" class="form-control">
        @foreach (var a in ViewBag.Accounts) {
            <option value="@a.AccountId">@a.AccountName</option>
        }
        </select>
    </div>
    <div class="col-sm-1"><input type="submit" value="View" class="btn btn-success"></div>
    </form>
    <div class="col-sm-1"><a href="AddAccount" class="btn btn-warning">Add an Account...</a></div>
</div>