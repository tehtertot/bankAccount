@Html.Partial("NavigationBar")
@model bank.Models.Account

<h4>Add an Account</h4>
<div class="row">
<div class="col-sm-3">
    <form asp-action="Add" method="post">
        <div class="form-group">
            <label asp-for="AccountName"></label>
            <input asp-for="AccountName" class="form-control">
            <span class="rederror" asp-validation-for="AccountName"></span>
        </div>
    <div class="form-group">
        <label asp-for="Balance"></label>
        <input asp-for="Balance" class="form-control">
        <span class="rederror" asp-validation-for="Balance"></span>
    </div>
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-2">
        <input type="hidden" name="userid" value="@ViewBag.userid">
        <input type="submit" value="Add" class="btn btn-success">
        </div>
    </div>
    </form>
</div>
</div>